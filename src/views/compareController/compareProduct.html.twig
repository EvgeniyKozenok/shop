{% extends "default.html.twig" %}
{% block content %}
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="{{ route('root') }}"><i class="icon-white icon-home"></i></a> <span class="divider">  /
            <li><a href="{{ route(back_page.name) }}">{{ back_page.title }}</a></li> / </span></li>
            <li class="active">Сравнение продуктов</li>
        </ul>
        <small>СРАВНИТЕ {{ back_page.title|upper }}</small>
        <div class="row">
           {% for good in goods %}
            <div id="gallery" class="span3">
                <h3>{{ good.name }}</h3>
                <small>{{ good.brand }} ({{ good.type }})</small>
                <div class="qtyFrm">
                    <div class="control-group">
                        <label class="control-label"><span class="btn btn-info sumProduct" value="{{ good.sum }}" style="cursor: default">{{ good.price }} &#8372;</span></label>
                        <div class="controls">
                            <button type="submit" data-atr="{{ product }}:{{ good.id }}" price="{{ good.price }}" value="{{ product }}:{{ good.sum }}" class="btn btn-large btn-success pull-left add-to-basket"> В корзину <i class=" icon-shopping-cart"></i></button>
                        </div>
                    </div>
                </div>
                <br class="soft"/>
                <br class="soft">
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="home">
                        <table class="table table-bordered">
                            <tbody>
                            {% for key, value in good %}
                            {% if key == 'name' %}
                            {% elseif key == 'id' %}
                            {% elseif key == 'photo' %}
                            {% elseif key == 'sum' %}
                            {% else %}
                            {% if loop.index%2 == 0 %}
                            <tr class="techSpecRow alert alert-info"><td class="techSpecTD1">{{ key|capitalize }} </td><td class="techSpecTD2">{{ value|upper }}</td></tr>
                            {% else %}
                                <tr class="techSpecRow alert alert-success"><td class="techSpecTD1">{{ key|capitalize }}</td><td class="techSpecTD2">{{ value|upper }}</td></tr>
                            {% endif %}
                            {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
           {% endfor %}
        </div>
    </div>
{% endblock %}